{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BLiPS",
  "version": "0.9.0",
  "identifier": "com.blips.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:5173/",
    "distDir": "../dist",
    "withGlobalTauri": false,
    "outputFileName": "BLiPS-v${version}-${platform}-${arch}.${ext}"
  },
  "app": {
    "windows": [
      {
        "title": "BLiPS - Balloon Launch Prediction Software",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
